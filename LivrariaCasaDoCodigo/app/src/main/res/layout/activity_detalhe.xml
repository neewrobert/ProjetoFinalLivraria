<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.casadocodigo.livrariacasadocodigo.DetalheActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detalhe_barraTarefas"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detalhe_foto"
            android:layout_width="115dp"
            android:layout_height="145dp"
            android:src="@mipmap/ic_catalogo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detalhe_lblTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo: "
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/detalhe_lblSubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubTitulo: "
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/detalhe_lblAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor: "
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detalhe_txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/detalhe_txtSubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/detalhe_txtAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblEditora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editora: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtEditora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblEdicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EdiÃ§ao: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtEdicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano de publicacao: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblPaginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de Paginas: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtPaginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalhe_lblCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: "
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/detalhe_txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/detalhe_btnVoltar"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:text="VOLTAR"
        android:src="@android:drawable/ic_media_rew"
        android:background="@color/colorButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>
</android.widget.LinearLayout>
    </ScrollView>
